<%= stylesheet_link_tag "index" %>

<div class="principal grix xs4">
  <div class="" id="side-bar" style="background: #BCDFFB" >
    <div class="grix " id="links-list" style="flex-direction: column">
      <a class="navbar-link active btn shadow-1 rounded-1 blue" href="/">Accueil</a>
      <a class="navbar-link btn shadow-1 rounded-1 blue" href="/users/">Profile</a>
      <% if current_user != nil %>
        <a class="navbar-link btn shadow-1 rounded-1 blue" href="/posts/new">New Post</a>
      <% end %>
    </div>

  </div>
  <div class="" id="posts">
    <% @posts.each do |post| %>
      <div class="card shadow-2 rounded-2 white">
        <div class="card-header" style="text-align: start">
          <img src="<%= post.get_author_picture %>" width="15%" class="rounded-3" style="margin-left: 15px; border-radius: 50%; height: 50px; width: auto;"/>
          <a href="/users/<%= post.user_id %>"><%= post.get_author_name %></a>
        </div>
        <div class="card-content">
          <blockquote><%= post.text %></blockquote>
        </div>
        <div class="divider"></div>
        <div class="card-footer">Created at <i><%= post.created_at %></i>
          <% if post.updated_at != post.created_at %> | Updated at <i><%= post.updated_at %></i>
          <% end %></div>
      </div>
    <% end %>
  </div>


</div>

